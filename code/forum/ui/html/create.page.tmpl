{{template "base" .}}

{{define "title"}}Create a New Post{{end}}

{{define "body"}}
<form action='/posts/create' method='POST' enctype='multipart/form-data'>
	{{with .Form}}
	<div>
		<label>Title:</label>
		{{with .Errors.Get "title"}}
			<label class='error'>{{.}}</label>
		{{end}}
		<input type='text' name='title' value='{{.Get "title"}}'>
	</div>
	<div>
		<label>Body:</label>
		{{with .Errors.Get "body"}}
			<label class='error'>{{.}}</label>
		{{end}}
		<textarea name='body'>{{.Get "body"}}</textarea>
	</div>
	<div>
		{{with .Errors.Get "category"}}
			<label class='error'>{{.}}</label>
		{{end}}
	{{end}}
	{{if .Categories}}
		<label>Check relevant categories:</label><br>
		{{range .Categories}}
			<input type='checkbox' name='category' value='{{.ID}}'> {{.Name}}
		{{end}}
	{{else}}
		<p>There are no categories yet!</p>	
	{{end}}
	</div>
	<div>
            <label>Upload Image:</label><br>
		{{if .FileTooLargeErr}}<label class="error">{{.FileTooLargeErr}}</label>{{end}}
            <input type='file' name='image'>
        </div>
	<div>
		<input type='submit' value='Publish Post'>
	</div>
</form>
{{end}}
